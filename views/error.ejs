<%- include('partials/head', { title: 'Error - LearnHub' }) %>
<body>
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto text-center">
      <div class="text-red-500 mb-6">
        <i class="fas fa-exclamation-circle text-6xl"></i>
      </div>
      <h1 class="text-3xl font-bold mb-4">Oops! Something went wrong</h1>
      <p class="text-gray-600 mb-8"><%= message || 'An unexpected error occurred.' %></p>
      <div class="flex justify-center gap-4">
        <a href="/" class="bg-primary text-white px-4 py-2 rounded-md hover:bg-primary-dark transition-colors">
          Go to Homepage
        </a>
        <a href="javascript:history.back()" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 transition-colors">
          Go Back
        </a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
  <%- include('partials/scripts') %>
</body>
</html>

