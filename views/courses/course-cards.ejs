<% if (courses.length > 0) { %>

  <% if (search && search.length > 0) { %>
  <div class="mb-6">
    <p class="text-gray-600">
      Showing results for "<%= search %>" - <%= courses.length %> courses found
    </p>
  </div>
<% } %>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% courses.forEach(course => { %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden ...">
      <img src="<%= course.thumbnail %>" alt="<%= course.title %>" class="w-full h-48 object-cover" />
      <div class="p-6">
        <h3 class="text-xl font-bold"><%= course.title %></h3>
        <p class="text-gray-600 mb-4"><%= course.instructor %></p>
        <span class="bg-primary px-2 py-1 rounded-full">â‚¹<%= course.price.toFixed(2) %></span>
        <a href="/courses/<%= course._id || course.id %>" class="block w-full text-center bg-primary py-2 px-4 rounded-md hover:bg-primary-dark">View Course</a>
      </div>
    </div>
  <% }); %>
</div>
<% } else { %>
<p class="text-gray-600">No courses found</p>
<% } %>
