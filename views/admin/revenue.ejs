
<%- include('../partials/head', { title: 'Revenue - LearnHub' }) %>
<body class="bg-black text-white">
  <%- include('../partials/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Revenue Overview</h1>

    <!-- Alerts -->
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="bg-green-800 border border-green-600 text-green-300 px-4 py-3 rounded mb-4">
        <%= success_msg %>
      </div>
    <% } %>
    <% if(error_msg && error_msg.length > 0) { %>
      <div class="bg-red-800 border border-red-600 text-red-300 px-4 py-3 rounded mb-4">
        <%= error_msg %>
      </div>
    <% } %>

    <!-- Total Revenue -->
    <div class="bg-gray-800 rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-lg font-semibold mb-2">Total Revenue</h2>
      <p class="text-3xl font-bold">₹<%= totalRevenue %></p>
    </div>

    <!-- Monthly Revenue Breakdown -->
    <div>
      <h2 class="text-xl font-bold mb-4">Monthly Revenue Breakdown</h2>
      <% if (monthlyRevenue.length > 0) { %>
        <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden">
          <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-700">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Month</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Revenue</th>
              </tr>
            </thead>
            <tbody class="bg-gray-800 divide-y divide-gray-700">
              <% monthlyRevenue.forEach(function(data) { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= data.month %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">₹<%= data.revenue %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="bg-gray-800 rounded-lg shadow-md p-6 text-center">
          <p class="text-gray-400">No revenue data available.</p>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>
</body>
</html>
