<%- include('../partials/head', { title: 'Student Dashboard - LearnHub' }) %>
<body class="bg-black text-white">
  <%- include('../partials/navbar') %>

  <link rel="stylesheet" href="/styles/student-page.css" />
  <div class="d-flex">
    <div class="sidebar d-flex flex-column">
        
        
        <a href="#" class="active d-flex align-items-center p-2"><i class="fas fa-home me-2"></i>Dashboard</a>
        <a href="#" ><i class="fas fa-book me-2"></i>Courses</a>
        <a href="#" ><i class="fas fa-tasks me-2"></i>Assignments</a>
        <a href="#" ><i class="fas fa-chart-bar me-2"></i>Grades</a>
        <a href="#" ><i class="fas fa-envelope me-2"></i>Messages</a>
        <a href="#" ><i class="fas fa-folder me-2"></i>Resources</a>
        <a href="#" ><i class="fas fa-user me-2"></i>Profile</a>
        <a href="#" ><i class="fas fa-cog me-2"></i>Settings</a>
    </div>
    <div class="container-fluid main-content">
        <div class="row mb-3 align-items-center">
            <div class="col-md-8">
                <h3>Welcome, <%=user.name%><span class="text-warning"></span></h3>
                <input type="text" class="form-control search-bar" placeholder="Search courses">
            </div>
            <div class="col-md-4">
                
            </div>
        </div>
        <div class="row">
            <!--Stats-->

            <div class="col-md-6 mb-3">
                <span class="card p-3">
                    <h5>Enrolled Courses</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <span><%= enrolledCourses.length %></span>
                    </div>
                </span>
                <span class="card p-3">
                    <h5>Completed Courses</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <span><%= progress.completedCourses %></span>
                    </div>
                </span>
            </div>

            <!--Courses info-->
            <!--My Courses-->
            <div class="col-md-8">
                <h4>My Courses</h4>
                <% if (enrolledCourses.length > 0) { %>
                <div class="row">
                    <% enrolledCourses.forEach(function(course) { %>
                    <!--Beginning of card-->
                    <div class="col-md-6 mb-3">
                        <div class="card p-3">
                            <img src="<%= course.thumbnail %>" alt="<%= course.title %>" class="w-full h-40 object-cover">
                            <h5><%= course.title %></h5>
                            <p>Master the language of business.</p>
                            <p><%= course.instructor %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span><%= course.progress %>%</span>
                                <div class="progress w-50">
                                    <div class="progress-bar bg-warning" style="width: <%= course.progress %>%"></div>
                                </div>
                            </div>
                            <a href="/courses/<%= course.id %>/learn" class="block w-full text-center bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-700">
                                <% if (course.progress === 0) { %>
                                    Start Course
                                  <% } else if (course.progress === 100) { %>
                                    Review Course
                                  <% } else { %>
                                    Continue Learning
                                  <% } %>
                            </a>
                        </div>
                    </div>
                    <% });%>
                    <!--End of card-->
                </div>
                <% } else { %>
                    <p class="text-gray-400">You haven't enrolled in any courses yet. Browse our courses to get started!</p>
                  <% } %>
            </div>
            <div class="col-md-4">
                <h4>Notifications</h4>
                <div class="card p-3 mb-2">
                    <p><i class="fas fa-bell me-2"></i> New Assignment Added - Economics Math</p>
                </div>
                <div class="card p-3">
                    <p><i class="fas fa-reply me-2"></i> Tutor Replied to Your Discussion</p>
                </div>
            </div>
        </div>
    </div>
</div>

  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>
</body>
</html>


