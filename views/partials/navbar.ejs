<nav class="bg-gray-900 shadow-md text-white">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="text-2xl font-bold text-primary">SeekhoBharat</a>
      <div class="hidden md:flex space-x-4 text-white">
        <a href="/courses" class="nav-link">Courses</a>
        <% if (user) { %>
        <a href="/dashboard" class="nav-link ">Dashboard</a>
        <a href="/user/profile" class="nav-link ">Profile</a>
        <% if (user.role === 'student'){ %>
        <a href="/cart" class="nav-link relative flex items-center">
        Cart
        <span
          id="cart-count-desktop"
          class="absolute -top-2 -right-3 bg-red-500 text-white text-xs font-bold px-1.5 py-0.5 rounded-full hidden"
        >0</span>
      </a>
        <% } else { %> <% } %>
        <a href="/logout" class="nav-link ">Logout</a>

        <% } else { %>
        <a href="/login" class="nav-link text-white">Login</a>
        <a href="/register" class="nav-link text-white">Register</a>
        <% } %>
      </div>
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-gray-500 hover:text-gray-600"
        >
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
  </div>
  <div id="mobile-menu" class="hidden md:hidden">
    <a
      href="/courses"
      class="block py-2 px-4 text-sm hover:bg-gray-600 text-white"
      >Courses</a
    >
    <% if (user) { %>
    <a
      href="/dashboard"
      class="block py-2 px-4 text-sm hover:bg-gray-600 text-white"
      >Dashboard</a
    >
    <a
      href="/user/profile"
      class="block py-2 px-4 text-sm hover:bg-gray-600 text-white"
      >Profile</a
    >
    <% if (user.role === 'student'){ %>
    <a href="/cart" class="flex items-center py-2 px-4 hover:bg-gray-600 text-white">
  Cart
  <span
    id="cart-count-mobile"
    class="ml-2 bg-red-500 text-white text-xs font-bold px-1.5 py-0.5 rounded-full hidden"
  >0</span>
</a>
    <% } else { %> <% } %>
    <a
      href="/logout"
      class="block py-2 px-4 text-sm hover:bg-gray-600 text-white"
      >Logout</a
    >
    <% } else { %>
    <a
      href="/login"
      class="block py-2 px-4 text-sm hover:bg-gray-100 text-white"
      >Login</a
    >
    <a
      href="/register"
      class="block py-2 px-4 text-sm hover:bg-gray-100 text-white"
      >Register</a
    >
    <% } %>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function () {
  const menuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const cartCount = document.getElementById("cart-count");

  menuButton.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });

  async function updateCartCount() {
  try {
    const res = await fetch("/cart/count");
    if (!res.ok) throw new Error("Network error");
    const data = await res.json();
    const count = data.count || 0;

    const desktopCount = document.getElementById("cart-count-desktop");
    const mobileCount = document.getElementById("cart-count-mobile");

    if (count > 0) {
      desktopCount.textContent = count;
      mobileCount.textContent = count;
      desktopCount.classList.remove("hidden");
      mobileCount.classList.remove("hidden");
    } else {
      desktopCount.classList.add("hidden");
      mobileCount.classList.add("hidden");
    }
  } catch (err) {
    console.error("Cart count fetch failed:", err);
  }
}

  updateCartCount();
  setInterval(updateCartCount, 30000);
});

</script>